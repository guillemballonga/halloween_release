    <font color="green">Creat fa :</font>
    <%= time_ago_in_words(comment.created_at) %>
    
    <button type="button" class="btn btn-danger"><%= link_to 'Delete',comment, method: :delete, data: { confirm: 'EstÃ s segur?' }%></button>&nbsp;
    
