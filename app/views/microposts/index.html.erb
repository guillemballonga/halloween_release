<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" >
    <title>The issue tracker</title>
</head>

<body>
    <p id="notice">
        <%= notice %>
    </p>

    
    <div class="container-fluid">
        
    <!--Info Usuari loguejat -->
    <% if current_user %>
    	<div class="text-right">
            <a href=me#show><img src= <%=current_user.picture%> class='imgRedonda' /> <%= current_user.first_name %> <%= current_user.last_name %>
        </div>    
       
        <div class="text-right"> 
            <%= link_to 'LogOut', logout_path, :class => "btn" %>
        </div>
    <% end %>
        
        
        
    <div class = "form-issues">    
        <h1>Issues</h1>        
        <div class="table-responsive">
            <table class="table table-borderless table-hover">
                <thead class="border-bottom">
                    <tr>
                        <th scope="1" style="width:26%;">Title</th>
                        <th scope="1" style="width:5%;">T</th>
                        <th scope="1" style="width:5%;">P</th>
                        <th scope="1" style="width:7%;">Status</th>
                        <th scope="1" style="width:5%;">Votes</th>
                        <th scope="1" style="width:10%;">Asignee</th>
                        <th scope="1" style="width:14%;">Created</th>
                        <th scope="1" style="width:14%;">Updated</th>                    
                        <th scope="1" style="width:14%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @microposts.each do |micropost| %>
                        <tr>
                            <td class="align-middle">
                                <%= micropost.id %><%= micropost.title %>
                            </td>
                            <td class="align-middle">
                                T
                            </td>
                            <td class="align-middle">
                                P
                            </td>
                            <td class="align-middle">
                                RESOLVED
                            </td>
                            <td class="align-middle">
                                1
                            </td>
                            <td class="align-middle">
                                <%= micropost.user.first_name %>
                            </td>
                            <td class="align-middle">
                                2019-11-07
                            </td>
                            <td class="align-middle">
                                2019-11-07
                            </td>                        
                            <td class="align-middle">
                                <div class="content-desktop">
                                    <div class="btn-group btn-group-sm">
                                      <button type="button" class="btn btn-primary"><%= link_to 'Show', micropost %></button>&nbsp;
                                      
                                     
                                      <button type="button" class="btn btn-success"><%= link_to 'Edit',edit_micropost_path(micropost) %></button>&nbsp;
                                      <button type="button" class="btn btn-danger"><%= link_to 'Delete',micropost, method: :delete, data: { confirm: 'Are you sure?' }%></button>&nbsp;
                                      
                                    </div>
                                </div>
                                <div class="content-mobile" style="display:none;"> 
                                    <div class="icons-group">
                                        <i class="fa fa-eye" data-toggle="tooltip" data-placement="top" title="Show"></i>&nbsp;
                                        <i class="fa fa-edit" data-toggle="tooltip" data-placement="top" title="Edit"></i>&nbsp;
                                        <i class="fa fa-trash" data-toggle="tooltip" data-placement="top" title="Delete"></i>
                                    </div>
                                    </div>
                            </td>
                        </tr>
                        <% end %>
                </tbody>
            </table>
        </div>
        </div>
    </div>

    <%= link_to 'Users', users_path, :class => "btn" %> |
        <%= link_to 'Create Issue', new_micropost_path, :class => "btn"%>

</body>

</html>