<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>UserID:</strong>
  <%= @user.id %>
  
    <strong>Posts:</strong>
    
  <table>
    <thead>
      <tr>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.microposts.each do |micropost| %>
        <tr>
          <td><%= micropost.content %></td>
          <td><%= link_to 'Show', micropost %></td>
          <td><%= link_to 'Edit Post', edit_micropost_path(micropost) %></td>
          <td><%= link_to 'Destroy Post', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
